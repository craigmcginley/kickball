<!DOCTYPE html>


<html lang="en">
  <head>
    <title>League of Cool Kickball Professionals</title>
  </head>

  <body>

    <% teams = [] %>
    <% positions = [] %>
    <% @players.each do |player| %>
        <% teams << player[:team] %>
        <% positions << player[:position] %>
    <% end %>
    <% teams.uniq! %>
    <% positions.uniq! %>

   <h1>League of Cool Kickball Professionals</h1>
   <h2>Teams</h2>
    <ul>
      <% teams.each do |team| %>
        <li><a href="/teams/<%=team%>"><%= team %></a></li>
      <% end %>
    </ul>

    <h2>Positions</h2>
    <ul>
      <% positions.each do |position| %>
        <li><a href="/positions/<%=position%>"><%= position %></a></li>
      <% end %>
    </ul>


  </body>
</html>
